{% trans_default_domain 'emails' %}

{% set password_reset_url = url('password_reset', {
    email: user.getEmail(),
    password_reset_code: user.getPasswordResetCode(),
}) %}

<h1>
  {{ 'greeting' | trans({
    'user_username': user.getUsername(),
  }) }}
</h1>

<p>{{ 'password_reset.content' | trans }}</p>
<p>{{ password_reset_url | raw }}</p>
