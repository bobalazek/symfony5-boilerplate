{% extends 'contents/settings/_layout.html.twig' %}

{% block title %}{{ 'Actions' | trans }} | {{ parent() }}{% endblock %}

{% block main %}
  {% if pagination.getTotalItemCount() %}
    <table class="table">
      <thead>
        <tr>
          <th>{{ 'Action' | trans }}</th>
          <th>{{ 'IP' | trans }}</th>
          <th>{{ 'Time' | trans }}</th>
        </tr>
      </thead>
      <tbody>
        {% for user_action in pagination.getItems() %}
          <tr>
            <td>{{ user_action.getKey() }}</td>
            <td>{{ user_action.getIp() }}</td>
            <td>{{ user_action.getCreatedAt() | date() }}</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
    {{ knp_pagination_render(pagination) }}
  {% else %}
    <div class="alert alert-info">
      {{ 'actions.alert.no_user_actions_yet' | trans({}, 'settings') }}
    </div>
  {% endif %}
{% endblock %}
