{% trans_default_domain 'emails' %}
{% set deletion_confirm_url = url('settings.deletion', {
    deletion_confirm_code: user.getDeletionConfirmCode(),
}) %}
{% apply inky_to_html | inline_css(source('@css/vendor/foundation-emails.css')) %}
  <container>
    <h1>
      {{ 'greeting' | trans({
        'user_username': user.getUsername(),
      }) }}
    </h1>
    <p>{{ 'deletion_confirm.content' | trans }}</p>
    <p>{{ deletion_confirm_url | raw }}</p>
  </container>
{% endapply %}
