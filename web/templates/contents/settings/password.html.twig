{% extends 'contents/settings/_layout.html.twig' %}

{% block title %}{{ 'Password' | trans }} | {{ parent() }}{% endblock %}

{% block main %}
  <h2>{{ 'Password' | trans }}</h2>
  {{ form_start(form) }}
    {{ form_row(form.oldPlainPassword) }}
    {{ form_row(form.plainPassword) }}
    <button class="btn btn-lg btn-block btn-primary" type="submit">
      {{ 'Save' | trans }}
    </button>
    {{ form_errors(form) }}
  {{ form_end(form) }}
{% endblock %}
